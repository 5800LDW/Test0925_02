    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_login"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <TextView
            style="@style/putin_item_title"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/putin_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="盘点日期" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/putin_item_content_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hz_grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/putin_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="盘点人" />

            <TextView
                android:id="@+id/tvPerson"
                style="@style/putin_item_content_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hz_grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/putin_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="仓库" />

            <LinearLayout
                android:id="@+id/llMore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStorage"
                    style="@style/putin_item_content_black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/icon_more"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hz_grey_line" />


        <TextView
            style="@style/putin_item_title"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/putin_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="扫描条码" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/etCode"
                    style="@style/putin_item_content_black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_round_grey"
                    android:maxLength="30"
                    android:singleLine="true" />


                <Button
                    android:id="@+id/btSearch"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="确定"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/hz_grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/putin_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="物资名称" />

            <TextView
                android:id="@+id/tvGoodsName"
                style="@style/putin_item_content_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hz_grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/putin_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="物资规格" />

            <TextView
                android:id="@+id/tvModel"
                style="@style/putin_item_content_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hz_grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/putin_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="账面数量" />

            <TextView
                android:id="@+id/tvOriginalNum"
                style="@style/putin_item_content_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hz_grey_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/putin_item_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="实盘数量" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tvCheckNumber"
                    style="@style/putin_item_content_black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_weight="2" />

                <EditText
                    android:id="@+id/etCheckNumber"
                    style="@style/putin_item_content_black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_round_grey"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="15"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btModify"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:background="@drawable/bg_btn_main"
                    android:text="修改数量" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/hz_grey_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCheckedNum"
                style="@style/black_angle_style"
                android:background="@drawable/angle_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="@string/text_checked"
                android:textColor="@color/white"
                android:textSize="14dp" />


            <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/hz_grey_line" />-->


            <TextView
                android:id="@+id/tvUnCheckedNum"
                style="@style/black_angle_style"
                android:background="@drawable/selector_btn_angle_black_bg"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="@string/text_unchecked"
                android:textColor="@color/white"
                android:textSize="14dp" />
            <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/hz_grey_line" />-->
            <TextView
                android:id="@+id/tvUpLoad"
                style="@style/button_angle_style2"
                android:background="@drawable/selector_btn_angle_red_bg"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="上传"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>
