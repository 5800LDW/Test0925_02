<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlueToothPrintTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbarBackground</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BackGroundStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="item_style">
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="item_style_TextBlack" parent="item_style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_style_Textgray" parent="item_style">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="item_style_TextBlack_title" parent="item_style_TextBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/item_background</item>
    </style>

    <style name="item_style_TextWhite" parent="item_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="item_style_TextBlack_Drawable" parent="item_style_TextBlack">
        <item name="android:drawableRight">@drawable/abc_spinner_ab_default_holo_light</item>

    </style>

    <style name="number_input" parent="item_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@null</item>

    </style>

    <style name="title_text_style" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PasswordCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_password</item>
    </style>


    <style name="AccountCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_account</item>
    </style>




    <!-- 控件样式效果 -->
    <style name="button_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    //values

    <style name="TranslucentTheme" parent="AppTheme"></style>


    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>


    <style name="CollapsingToolbarLayoutText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">25dp</item>
    </style>


    <style name="skyworth_textStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">15dp</item>

    </style>

    <style name="skyworth_inputEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:maxHeight">60dp</item>

    </style>


    <style name="cardView_Style">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18dp</item>
    </style>


    <style name="gridView_item_content">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <style name="center_style" parent="@style/center_left_style">
        <item name="android:gravity">center</item>
    </style>


    <style name="textStyle_For_TextColor">
        <item name="android:textColor">@color/steel</item>
    </style>

    <style name="putin_item_title">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/hz_grey_background</item>
        <item name="android:textColor">@color/steel</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="putin_item_content">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/steel</item>
    </style>


    <style name="putin_item_content_black" parent="putin_item_content">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="putin_item_content_black_number_limit" parent="putin_item_content_black">
        <item name="android:maxLength">9</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">1234567890</item>
        <item name="android:singleLine">true</item>
    </style>


    <!-- Toolbar主题设置-->
    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:colorBackground">#aa333333</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item> <!--新增一个item，用于控制menu-->
        <!-- item_ununload_detailsitem name="android:actionOverflowButtonStyle">@style/OverflowButtonStyitem_ununload_detailsitem>-->
    </style>
    <!--修改toolbar弹出菜单的位置-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--把该属性改为false即可使menu位置位于toolbar之下-->
    </style>
    <!--&lt;!&ndash;修改toolbar菜单按钮的style&ndash;&gt;-->
    <!--<style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">-->
        <!--<item name="android:src">@drawable/ico_faitem_ununload_detailsitem>&ndash;&gt;-->
    <!--</style>&ndash;&gt;-->
    <!--toolbar菜单按钮的颜色-->
    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
    </style>

    <style name="picker_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--选择图片弹窗动画 -->
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>


    <style name="Dialog_Fullscreen">
        <item name="android:windowBackground">@color/translucence</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowEnterAnimation">@anim/slide_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/slide_top_to_bottom</item>
    </style>


    <style name="main2_item">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_main_gridview</item>
    </style>
    <style name="main2_item_title">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/hz_grey_background</item>
        <item name="android:textColor">@color/steel</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="look_output_item">

        <item name="android:textSize">17dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="repair_item">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AccountCheckboxTheme2" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_account</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textview_green_angle_style" parent="@style/center_left_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_angle_green_bg</item>
    </style>

    <style name="black_angle_style" parent="@style/center_left_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_btn_angle_black_bg</item>
    </style>


    <style name="button_angle_style" parent="@style/button_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_angle_blue_white</item>
    </style>
    <style name="button_angle_style2" parent="@style/button_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_angle_red_bg</item>
    </style>

    <style name="button_angle_red_style" parent="@style/button_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_angle_red</item>
    </style>
</resources>
